<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.ermp.model.dao.UserDao">
	<select id="selectUser" parameterType="User" resultType="User">
		SELECT *
		FROM `user`
		WHERE user_id = #{userId} and password = #{password}
	</select>

	<insert id="insertUser" parameterType="User">
		INSERT INTO `user` (user_id, name, password, email)
		VALUES (#{userId},#{name},#{password},#{email});
	</insert>
	
	<select id="checkId" parameterType="String">
		SELECT count(*)
		FROM `user`
		WHERE user_id = #{userId}
	</select>
	
	<select id="checkEmail" parameterType="String">
		SELECT count(*)
		FROM `user`
		WHERE email = #{email}
	</select>

</mapper>